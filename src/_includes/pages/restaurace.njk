{% extends "layouts/base.njk" %}

{% block body %}
    {% include "sections/landing.njk" %}
    {% include "sections/service-info.njk" %}

    <!-- RESTAURANT -->
    <section class="py-24 ~px-4/8">
        <div class="container m-auto flex max-lg:flex-col lg:items-center ~gap-8/16">
            <!-- ROOM IMAGE -->
            <picture>
                <!-- MOBILE IMAGE -->
                <source media="(max-width: 600px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 736, height: 640, position: 'attention' }) | avif %}" type="image/avif">
                <source media="(max-width: 600px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 736, height: 640, position: 'attention' }) | webp %}" type="image/webp">
                <source media="(max-width: 600px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 736, height: 640, position: 'attention' }) | jpeg %}" type="image/jpeg">
                <!-- TABLET IMAGE -->
                <source media="(max-width: 1024px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 1350, height: 896, position: 'attention' }) | avif %}" type="image/avif">
                <source media="(max-width: 1024px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 1350, height: 896, position: 'attention' }) | webp %}" type="image/webp">
                <source media="(max-width: 1024px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 1350, height: 896, position: 'attention' }) | jpeg %}" type="image/jpeg">
                <!-- DESKTOP IMAGE -->
                <source media="(min-width: 1024px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 1600, height: 896, position: 'attention' }) | avif %}" type="image/avif">
                <source media="(min-width: 1024px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 1600, height: 896, position: 'attention' }) | webp %}" type="image/webp">
                <source media="(min-width: 1024px)" srcset="{% getUrl restaurant.imageUrl | resize({ width: 1600, height: 896, position: 'attention' }) | jpeg %}" type="image/jpeg">
                <img
                    class="object-cover h-[20rem] md:h-[28rem] w-full"
                    src="{% getUrl restaurant.imageUrl | resize({ width: 1600, height: 896 }) | jpeg %}"
                    alt="{{ restaurant.imageAlt }}"
                    width="448"
                    height="800"
                    loading="lazy"
                    decoding="async"
                    aria-hidden="true"
                    draggable="false">
            </picture>

            <!-- TEXT + SPECIFICATION -->
            <div class="flex flex-col items-center gap-8">
                <!-- HEADING + TEXT -->
                <div class="flex flex-col gap-5">
                    <!-- TOPPER + HEADING -->
                    <div class="flex flex-col items-center gap-4">
                        <!-- TOPPER -->
                        <span class="topper-container">
                            {% include "components/topper-decoration.njk" %}
                            <span class="topper">{{ restaurant.topper }}</span>
                            {% include "components/topper-decoration.njk" %}
                        </span>

                        <h2 class="~max-w-sm/md text-center ~text-2xl/3xl font-black uppercase">{{ restaurant.heading | safe }}</h2>
                    </div>

                    <!-- TEXT -->
                    {% for paragraph in restaurant.paragraphs %}
                        <p class="max-w-xl font-jakarta-sans text-center ~text-sm/base text-ochre">{{ paragraph.text }}</p>
                    {% endfor %}
                </div>

                <!-- CTA -->
                <a href="/assets/pdf/chateau-orlice-jidelni-listek.pdf" target="_blank" class="btn">{{ restaurant.cta }}</a>
            </div>
        </div>
    </section>

    <!-- PUB -->
    <section class="py-24 ~px-4/8">
        <div class="container m-auto flex max-lg:flex-col flex-row-reverse lg:items-center ~gap-8/16">
            <!-- ROOM IMAGE -->
            <picture>
                <!-- MOBILE IMAGE -->
                <source media="(max-width: 600px)" srcset="{% getUrl pub.imageUrl | resize({ width: 736, height: 640, position: 'attention' }) | avif %}" type="image/avif">
                <source media="(max-width: 600px)" srcset="{% getUrl pub.imageUrl | resize({ width: 736, height: 640, position: 'attention' }) | webp %}" type="image/webp">
                <source media="(max-width: 600px)" srcset="{% getUrl pub.imageUrl | resize({ width: 736, height: 640, position: 'attention' }) | jpeg %}" type="image/jpeg">
                <!-- TABLET IMAGE -->
                <source media="(max-width: 1024px)" srcset="{% getUrl pub.imageUrl | resize({ width: 1350, height: 896, position: 'attention' }) | avif %}" type="image/avif">
                <source media="(max-width: 1024px)" srcset="{% getUrl pub.imageUrl | resize({ width: 1350, height: 896, position: 'attention' }) | webp %}" type="image/webp">
                <source media="(max-width: 1024px)" srcset="{% getUrl pub.imageUrl | resize({ width: 1350, height: 896, position: 'attention' }) | jpeg %}" type="image/jpeg">
                <!-- DESKTOP IMAGE -->
                <source media="(min-width: 1024px)" srcset="{% getUrl pub.imageUrl | resize({ width: 1600, height: 896, position: 'attention' }) | avif %}" type="image/avif">
                <source media="(min-width: 1024px)" srcset="{% getUrl pub.imageUrl | resize({ width: 1600, height: 896, position: 'attention' }) | webp %}" type="image/webp">
                <source media="(min-width: 1024px)" srcset="{% getUrl pub.imageUrl | resize({ width: 1600, height: 896, position: 'attention' }) | jpeg %}" type="image/jpeg">
                <img
                    class="object-cover h-[20rem] md:h-[28rem] w-full"
                    src="{% getUrl pub.imageUrl | resize({ width: 1600, height: 896 }) | jpeg %}"
                    alt="{{ pub.imageAlt }}"
                    width="448"
                    height="800"
                    loading="lazy"
                    decoding="async"
                    aria-hidden="true"
                    draggable="false">
            </picture>

            <!-- HEADING + TEXT -->
            <div class="flex flex-col gap-5">
                <!-- TOPPER + HEADING -->
                <div class="flex flex-col items-center gap-4">
                    <!-- TOPPER -->
                    <span class="topper-container">
                        {% include "components/topper-decoration.njk" %}
                        <span class="topper">{{ pub.topper }}</span>
                        {% include "components/topper-decoration.njk" %}
                    </span>

                    <h2 class="~max-w-sm/md text-center ~text-2xl/3xl font-black uppercase">{{ pub.heading | safe }}</h2>
                </div>

                <!-- TEXT -->
                {% for paragraph in pub.paragraphs %}
                    <p class="max-w-xl font-jakarta-sans text-center ~text-sm/base text-ochre">{{ paragraph.text }}</p>
                {% endfor %}
            </div>
        </div>
    </section>

    {% include "sections/cta.njk" %}
{% endblock body %}