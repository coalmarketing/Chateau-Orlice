{% extends "layouts/base.njk" %}

{% block body %}
    {% include "sections/landing.njk" %}

    <!-- CONTACT -->
    <section class="py-24 ~px-4/8 bg-white">
        <div class="container m-auto flex flex-col gap-16">
            <!-- TOPPER + HEADING -->
            <div class="flex flex-col items-center gap-4">
                <!-- TOPPER -->
                <span class="topper-container">
                    {% include "components/topper-decoration.njk" %}
                    <span class="topper">{{ contact.topper }}</span>
                    {% include "components/topper-decoration.njk" %}
                </span>

                <h2 class="text-center ~text-3xl/5xl font-black uppercase">{{ contact.heading }}</h2>
            </div>

            <!-- CONTACT ITEMS -->
            <ul class="grid grid-cols-1 sm:grid-cols-2 xl:flex xl:justify-around gap-y-16 gap-x-8">
                <!-- RECEPTION -->
                <li class="flex flex-col items-center gap-6">
                    <h3 class="text-center ~text-xl/2xl font-black">{{ contact.reception.title }}</h3>

                    <div class="flex flex-col gap-5">
                        <!-- PHONE + EMAIL -->
                        <div class="flex flex-col gap-1">
                            <a href="tel:{{ client.phoneForTel }}" class="font-jakarta-sans text-center ~text-sm/base text-ochre underline hover:text-black">
                                {{ client.phoneFormatted }}
                            </a>

                            <a href="tel:{{ client.email }}" class="font-jakarta-sans text-center ~text-sm/base text-ochre underline hover:text-black">
                                {{ client.email }}
                            </a>
                        </div>

                        <!-- ADDITIONAL INFO -->
                        <div class="flex flex-col gap-1">
                            <span class="font-jakarta-sans text-center text-sm text-ochre">{{ contact.reception.availability }}</span>
                            <span class="font-jakarta-sans text-center text-xs text-ochre font-medium italic">{{ contact.reception.disclaimer }}</span>
                        </div>
                    </div>
                </li>

                <!-- ADDRESS -->
                <li class="flex flex-col items-center gap-6">
                    <h3 class="text-center ~text-xl/2xl font-black">{{ contact.address.title }}</h3>

                    <div class="flex flex-col gap-5">
                        <!-- ADDRESS -->
                        <div class="flex flex-col gap-1">
                            <span class="font-jakarta-sans text-center ~text-sm/base text-ochre">
                                Chateau Orlice
                            </span>

                            <span class="font-jakarta-sans text-center ~text-sm/base text-ochre">
                                Orlice 1, 561 51, Letohrad
                            </span>
                        </div>

                        <!-- SHOW ON MAP -->
                        <a href="{{ client.address.mapLink }}" target="_blank" class="font-jakarta-sans text-center ~text-sm/base text-ochre underline hover:text-black">
                            {{ contact.address.showOnMap }}
                        </a>
                    </div>
                </li>

                <!-- MANAGEMENT -->
                <li class="flex flex-col items-center gap-6">
                    <h3 class="text-center ~text-xl/2xl font-black">{{ contact.management.title }}</h3>

                    <!-- EMAIL -->
                    <a href="mailto:events@chateau-orlice.cz" target="_blank" class="font-jakarta-sans text-center ~text-sm/base text-ochre underline hover:text-black">
                        events@chateau-orlice.cz
                    </a>
                </li>

                <!-- SOCIALS -->
                <li class="flex flex-col items-center gap-6">
                    <h3 class="text-center ~text-xl/2xl font-black">{{ contact.whereToFindUs.title }}</h3>

                    <div class="flex gap-4 font-jakarta-sans text-center text-sm text-ochre">
                        <!-- FACEBOOK -->
                        <a href="{{ client.socials.facebook }}" target="_blank" class="p-2 bg-cream text-gold transition-colors duration-300 hover:bg-gold hover:text-cream">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951"/>
                            </svg>
                        </a>

                        <!-- INSTAGRAM -->
                        <a href="{{ client.socials.instagram }}" target="_blank" class="p-2 bg-cream text-gold transition-colors duration-300 hover:bg-gold hover:text-cream">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599s.453.546.598.92c.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.5 2.5 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.5 2.5 0 0 1-.92-.598 2.5 2.5 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233s.008-2.388.046-3.231c.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92s.546-.453.92-.598c.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92m-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217m0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334"/>
                            </svg>
                        </a>

                        <!-- YOUTUBE -->
                        <a href="{{ client.socials.youtube }}" target="_blank" class="p-2 bg-cream text-gold transition-colors duration-300 hover:bg-gold hover:text-cream">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.01 2.01 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.01 2.01 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31 31 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.01 2.01 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A100 100 0 0 1 7.858 2zM6.4 5.209v4.818l4.157-2.408z"/>
                            </svg>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </section>

    <!-- MAP -->
    <section class="py-24 ~px-4/8 relative bg-cream z-10">
        <div class="container m-auto">
            <iframe
                class="h-[25rem] w-full"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d82138.95167787015!2d16.340228941630222!3d49.95806179291962!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470dfa4501e225b3%3A0xa0d2a574e3208068!2sHotel%20Tvrz%20Orlice!5e0!3m2!1scs!2scz!4v1751877772933!5m2!1scs!2scz&zoom=15"
                width="1440"
                height="400"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <!-- BACKGROUND -->
        <img
            class="object-cover absolute top-0 left-0 h-full w-full -z-10"
            src="/assets/svgs/tilling-background_black-gold.svg"
            alt="{{ services.backgroundAlt }}"
            width="1920"
            height="1044"
            loading="lazy"
            decoding="async"
            aria-hidden="true"
            draggable="false">
    </section>

    <!-- CONTACT FORM -->
    <section class="py-24 ~px-4/8 bg-white">
        <div class="container m-auto flex flex-col items-center gap-8">
            <!-- TOPPER + HEADING -->
            <div class="flex flex-col items-center gap-4">
                <!-- TOPPER -->
                <span class="topper-container">
                    {% include "components/topper-decoration.njk" %}
                    <span class="topper">{{ contactForm.topper }}</span>
                    {% include "components/topper-decoration.njk" %}
                </span>

                <h2 class="text-center ~text-3xl/5xl font-black uppercase">{{ contactForm.heading }}</h2>
            </div>

            <form class="flex flex-col gap-4 w-full max-w-4xl" method="POST" name="Kontaktní formulář" netlify-honeypot="bot-field" netlify>
                <fieldset class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <!-- HONEYPOT -->
                    <input class="sr-only" type="search" name="bot-field" tabindex="-1" autocomplete="off" spellcheck="false" autocorrect="off" autocapitalize="off" placeholder="Leave this empty">

                    <!-- FIRST NAME -->
                    <input class="input" type="text" name="Jméno" autocomplete="given-name" placeholder="{{ contactForm.firstName }}" required>

                    <!-- LAST NAME -->
                    <input class="input" type="text" name="Příjmení" autocomplete="family-name" placeholder="{{ contactForm.lastName }}" required>

                    <!-- EMAIL -->
                    <input class="input" type="email" name="Email" autocomplete="email" placeholder="{{ contactForm.email }}" required>

                    <!-- PHONE -->
                    <input class="input" type="tel" name="Telefon" autocomplete="tel" placeholder="{{ contactForm.phone }}" required>
                </fieldset>

                <!-- MESSAGE -->
                <textarea class="input min-h-[6lh] max-h-[30lh]" name="Zpráva" placeholder="{{ contactForm.yourMessage }}" required></textarea>

                <!-- PRIVACY POLICY -->
                <p class="font-jakarta-sans text-center ~text-xs/sm text-ochre">
                    {{ contactForm.bySendingYouAgreeWith }}
                    <a href="{{ '/gdpr' | locale_url }}" class="underline hover:text-black">{{ contactForm.privacyPolicy }}</a>
                </p>

                <!-- SUBMIT -->
                <button type="submit" class="btn self-center">{{ contactForm.submit }}</button>
            </form>
        </div>
    </section>
{% endblock %}